@using WebApplicationMVC.Extension
@using WebApplicationMVC.Models

@model IEnumerable<WebApplicationMVC.Models.Author>

@{
    ViewBag.Title = "Anagrafica Autori";
   
}

<h2>Autori: Bootstrap</h2>

<p>
    @Html.ActionLink("Nuovo autore", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
 
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biography)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Annotation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Annotation)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Dettaglio", "Details", new { id = item.Id }) |
                @Html.ActionLink("Elimina", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
